{
    "name": "sekhubede/gondwana-api-assignment",
    "description": "Slim-based PHP backend for Gondwana coding challenge",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Sekhubede",
            "email": "msekhubede@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.13",
        "slim/psr7": "^1.7",
        "guzzlehttp/guzzle": "^7.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "backend/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "backend/tests/"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage phpunit --display-deprecations --coverage-clover=coverage.xml",
        "serve": "php -S localhost:8080 -t backend/public",
        "check": "@test"
    }
}